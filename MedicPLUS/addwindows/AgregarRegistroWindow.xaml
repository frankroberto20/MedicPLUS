                        <materialDesign:PackIcon Kind="ArrowRightBoldCircle"
                                                 Width="50"
                                                 Height="50" Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                    </Button>
                    <Button x:Name="PreviousRegistroBtn" Style="{StaticResource MaterialDesignFloatingActionAccentButton}" Background="{x:Null}" BorderBrush="{x:Null}" materialDesign:RippleAssist.Feedback="{DynamicResource PrimaryHueMidBrush}"
