                           Grid.Row="0"
                           Text="-"
                           FontStyle="Italic"
                           VerticalAlignment="Bottom"
                           HorizontalAlignment="Center"
                           Margin="30"
                           Style="{StaticResource MaterialDesignCaptionTextBlock}"/>
