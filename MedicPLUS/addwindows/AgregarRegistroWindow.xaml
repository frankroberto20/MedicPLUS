<Window x:Class="MedicPLUS.addwindows.AgregarRegistroWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:MedicPLUS.addwindows"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal" 
        TextOptions.TextRenderingMode="Auto"       
        mc:Ignorable="d"
        Background="{x:Null}"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        FontFamily="{DynamicResource MaterialDesignFont}"
        Title="AgregarPacienteWindow" Height="700" Width="1150" WindowStyle="None" AllowsTransparency="True">
    <Window.Resources>
        <Style x:Key="ListBoxEditMode" TargetType="ListBoxItem">
            <Setter Property="OverridesDefaultStyle" Value="true" />
            <Setter Property="SnapsToDevicePixels" Value="true" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <CheckBox Margin="5,2"
                                IsChecked="{Binding IsSelected, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay}">
                            <ContentPresenter />
                        </CheckBox>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="ListBoxReadMode" TargetType="ListBoxItem">
            <Setter Property="OverridesDefaultStyle" Value="true" />
            <Setter Property="SnapsToDevicePixels" Value="true" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <TextBlock Margin="5,4" Text="{Binding}"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Border Background="{DynamicResource MaterialDesignPaper}" BorderBrush="#FF00BFA5" BorderThickness="0.5" CornerRadius="10">
        <materialDesign:DialogHost>
            <materialDesign:DialogHost.DialogContent>
                <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Width="300" Height="110">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Top" Margin="20">
                        <materialDesign:PackIcon Kind="PersonAdd" Width="30" Height="30"/>
                        <TextBlock Margin="15,5" Style="{StaticResource MaterialDesignBody2TextBlock}">
                            Registro guardado exitosamente!
                        </TextBlock>
                    </StackPanel>
                    <StackPanel HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="15">
                        <Button x:Name="CloseDialogBtn" Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}" Style="{DynamicResource MaterialDesignFlatButton}"
                                Click="CloseDialogBtn_Click">
                            OK
                        </Button>
                    </StackPanel>
                </Grid>
            </materialDesign:DialogHost.DialogContent>
            <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Border CornerRadius="10,10,0,0" Background="#FF00BFA5" MouseLeftButtonDown="Border_MouseLeftButtonDown">
            <Grid Grid.ColumnSpan="2">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <Button x:Name="SaveBtn" Height="20" Width="20" Margin="0,0,10,0" Background="{x:Null}" BorderBrush="{x:Null}" Visibility="Hidden" Click="SaveBtn_Click" Command="{x:Static materialDesign:DialogHost.OpenDialogCommand}"
                        Style="{StaticResource MaterialDesignFloatingActionMiniButton}">
                                <materialDesign:PackIcon
                            Kind="ContentSave" Foreground="White"
                            Height="20"
                            Width="20"/>
                        </Button>
                        <Button Height="20" Width="20" Margin="0,0,10,0" Background="{x:Null}" BorderBrush="{x:Null}" Click="Close_Click"
                        Style="{StaticResource MaterialDesignFloatingActionMiniButton}">
                            <materialDesign:PackIcon
                            Kind="WindowClose" Foreground="White"
                            Height="20"
                            Width="20"/>
                        </Button>
                        </StackPanel>
            </Grid>
        </Border>
            <Grid Grid.Row="1">
