                                             Height="24"
                                             Width="24"/>
                </ToggleButton>
                    <Button x:Name="NextRegistroBtn" Style="{StaticResource MaterialDesignFloatingActionAccentButton}" Background="{x:Null}" BorderBrush="{x:Null}" materialDesign:RippleAssist.Feedback="{DynamicResource PrimaryHueMidBrush}"
